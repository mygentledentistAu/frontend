{
  "id": "treatment",
  "label": "Treatment",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": {
        "type": "Text",
        "config": { "label": "Title", "placeholder": "" }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "",
          "options": ["Emergency Dental", "General treatments", "Cosmetic"],
          "default_value": "Emergency Dental"
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "featured",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "text": { "type": "SharedSlice" },
            "text_with_image": { "type": "SharedSlice" },
            "image": { "type": "SharedSlice" },
            "hero": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "StructuredText"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
